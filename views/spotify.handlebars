  <title>Receiptify</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="styles.css" />
</head>

<body>
  <div class="container">
    <h1>Receiptify</h1>
    <h2>Top Track Generator</h2>
    <div id="options">
      <button class="btn time-btn" id="short_term">Last Month</button>
      <button class="btn time-btn" id="medium_term">Last 6 Months</button>
      <button class="btn time-btn" id="long_term">All Time</button>
    </div>
    <div id="receipt">
      <div class="receiptContainer" id="shortTermReceipt">
        <h2 class="logo">
          RECEIPTIFY
        </h2>
        <p class="period">
          {{shortTerm.period}}
        </p>
        <p class="date">
          ORDER #000{{shortTerm.num}} FOR {{shortTerm.name}}
        </p>
        <p class="date">
          {{shortTerm.time}}
        </p>
        <table class="tracks">
          <thead>
            <td class="begin">
              QTY
            </td>
            <td>
              ITEM
            </td>
            <td class="length">
              AMT
            </td>
          </thead>
          {{#each shortTerm.tracks}}
          <tr>
            <td class="begin">
              {{this.id}}
            </td>
            <td class="name">
              {{this.name}} -
              {{#each this.artists}}
              <span>
                {{this.name}}
              </span>
              {{/each}}
            </td>
            <td class="length">
              {{this.duration_ms}}
            </td>
          </tr>
          {{/each}}
          <tr class="total-counts">
            <td class="begin" colspan="2">
              ITEM COUNT:
            </td>
            <td class="length">
              10
            </td>
          </tr>
          <tr class="total-counts-end">
            <td class="begin" colspan="2">
              TOTAL:
            </td>
            <td class="length">
              {{shortTerm.total}}
            </td>
          </tr>
        </table>
        <p class="date">
          CARD #: **** **** **** 2021
        </p>
        <p class="date">
          AUTH CODE: 123421
        </p>
        <p class="date">
          CARDHOLDER: {{shortTerm.name}}
        </p>
        <div class="thanks">
          <p>
            THANK YOU FOR VISITING!
          </p>
          <img src="barcode.png" />
          <p class="website">
            receiptify.herokuapp.com
